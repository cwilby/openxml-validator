<Window x:Class="OpenXMLValidator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenXMLValidator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textFile" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="725" Margin="10,10,0,0"/>
        <Button Content="Browse..." Margin="740,8,10,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Validate" HorizontalAlignment="Center" Margin="0,33,0,0" VerticalAlignment="Top" Click="Button_Click_1" Width="304"/>
        <DataGrid x:Name="dataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,58,10,10"/>

    </Grid>
</Window>
